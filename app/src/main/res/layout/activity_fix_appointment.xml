<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientFragments.FixAppointment"
    android:gravity="center"
    android:background="@color/innerColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Noto Susanto"
        android:textColor="@color/mainTextColor"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/spl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Spesialisasi : "
        android:textColor="@color/mainTextColor"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Melawi"
        android:textColor="@color/mainTextColor"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Alamat: Melawi, Kalbar"
        android:textColor="@color/mainTextColor"
        android:textSize="18sp"></TextView>
    <TextView
        android:id="@+id/date"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainTextColor"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="19/12/120111"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_round_main_btn"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="SETTING TANGGAL"
        android:textColor="@color/innerColor"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/time"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainTextColor"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="19/12/120111"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_round_main_btn"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="SETTING JAM"
        android:textColor="@color/innerColor"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setappoinment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_round_main_btn"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Buat Janji Konsul"
        android:textColor="@color/innerColor" />
</LinearLayout>